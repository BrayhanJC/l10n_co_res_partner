<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
           <field name="inherit_id" ref="base.view_partner_form" />
            <field name="model">res.partner</field>
            <field name="arch" type="xml">

                <field name="name" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="company_type" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <field name="company_type" position="after">
                    <field invisible="1" name="company_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                    <field name="is_company" class="oe_inline" modifiers="{}"/>
                    <label for="is_company" string="Â¿Es una empresa?"/>
                </field>


                <field name="parent_id" position="before">
                    <field name="name" invisible="1" />
                    <h3><field name="pseudo_name" readonly="1" /></h3>
                </field>

                <field name="type" position="before">
                    <field name="personType" attrs="{'readonly':[('company_type', '=', 'person')]}"/>
                    <field name="x_pn_tipoDocumento" />
                    <field name="x_pn_numeroDocumento" />
                    <field name="formatedNit" attrs="{'invisible':[('x_pn_tipoDocumento', '!=', 31)]}" readonly="1" />
                    <field name="companyName"  attrs="{'invisible':[('personType', '=', 1),('company_type', '=', 'person')]}" />
                    <field name="x_pn_nombre1" attrs="{'invisible':['|',('personType', '=', 2),('company_type', '=', 'company')]}" />
                    <field name="x_pn_nombre2" attrs="{'invisible':['|',('personType', '=', 2),('company_type', '=', 'company')]}" />
                    <field name="x_pn_apellido1" attrs="{'invisible':['|',('personType', '=', 2),('company_type', '=', 'company')]}" />
                    <field name="x_pn_apellido2" attrs="{'invisible':['|',('personType', '=', 2),('company_type', '=', 'company')]}"  />
                    <field name="x_pn_retri" />
                    <field name="ciiu" />
                </field>
            </field>
        </record>
    </data>
</openerp>